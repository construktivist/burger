
<div class="container">
  <div class="row">
    <h1 class="header">Eat Da Burger!</h1>
  </div>
  <div class="row">
    <div class="col-xs-12 col-lg-6">
      <div class="row pad-left">
        <h2 class="subheader">Burgers to Eat:</h2>
      </div>
      <div class="row pad-left">
        <ul>
          {{#each burgers}}
            {{#unless this.devoured}}
              <li>
                {{this.burger_name}}
                <form action="burger/update/{{this.id}}?_method=PUT" method="POST">
                  <input type="hidden" name="notEaten" value="true">
                  <button class="btn btn-primary" type="submit">Eat Da Burger!</button>
                </form>
              </li>
            {{/unless}}
          {{/each}}
        </ul>
      </div>
      <div class="row pad-left">
        <h2 class="subheader">Burgers Eaten!</h2>
        <ul>
          {{#each burgers}}
            {{#if this.devoured}}
              <li>
                {{burger_name}}
                <form action="burger/update/{{this.id}}?_method=PUT" method="POST">
                </form>
              </li>
            {{/if}}
          {{/each}}
        </ul>
      </div>
      <div class="row pad-left">
        <h2 class="subheader">Add some Burgers!</h2>
        <form class="create-update-form" action="burger/create" method="POST">
          <div class="form-group">
            <label for="ca">Burger Name:</label>
            <input type="text" id="ca" name="name">
          </div>
          <button class="btn btn-primary" type="submit">Add Burger</button>
        </form>
      </div>
    </div>
    <div class="col-xs-12 col-lg-6">
      <iframe src="//giphy.com/embed/l2SpNLZQSlENDKAkU" width="480" height="480" frameBorder="0" class="giphy-embed" allowFullScreen></iframe>
    </div>
  </div>
</div>
